{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "esnext",
    "target": "esnext",
    "types": ["node"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "paths": {
      "@lzear/eslint-config-typescript": ["./typescript"],
      "@lzear/eslint-config-react": ["./react"],
      "@lzear/eslint-config": ["./base"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "rules/**/bad.ts", "rules/**/good.ts"]
}
